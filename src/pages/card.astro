---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
---

<a href="/" class="back-button">← Home Page</a>

<style>
  .back-button {
    position: fixed;
    top: 2rem;
    left: 2rem;
    padding: 0.4rem 0.8rem;
    background-color: #222;
    color: white;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.8rem;
    transition: all 0.2s ease-in-out;
    z-index: 1000;
  }

  .back-button:hover {
    background-color: #000;
    transform: translateY(-2px);
  }
</style>

<BaseLayout
  title="David Glover — Digital Card"
  description="Computer Science Student at UC Santa Cruz. Contact and portfolio links.">
  <Card
    name="David Glover"
    position="Computer Science Student · UC Santa Cruz"
    aboutMe={`I'm a CS student who loves building practical tools that connect software and hardware. I enjoy embedded systems, Python, and creative technical projects that allow me to learn and experiment with new technologies and frameworks.`}
    linkedin="https://linkedin.com/in/davidgglover"
    github="https://github.com/dvdthr5"
    cvLink="/files/resume-cv.pdf"
    profileImage="/images/favicon.jpeg"
  />
</BaseLayout>
